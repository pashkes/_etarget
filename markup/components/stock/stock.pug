          div
            .slider__item.wide
              img(data-lazy="__static__img/content/photo-conf-4.jpg" width="1200" height="801" alt="фото-4")
          div
            .slider__item.wide
              img(data-lazy="__static__img/content/photo-conf-5.jpg" width="1200" height="801" alt="фото-5")
