doctype html
html(class="no-js", lang="ru")

  include ../components/head/head.pug
  include ../components/footer/footer.pug
  include ../components/header/header
  include ../components/promo/promo
  include ../components/social/social
  include ../components/icon/icon
  include ../components/idea/idea
  include ../components/why-go/why-go
  include ../components/stock/stock
  include ../components/who-like/who-like
